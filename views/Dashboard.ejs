<html lang="en">

<head>
  <title>
    <%= title %>
  </title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  <script> function ModalClick() {
      console.log("buttton call")
      const form = document.getElementById('DeleteModal');
      var myModal = new bootstrap.Modal(document.getElementById('DeleteModal'), {
        keyboard: false
      })
      var modalToggle = document.getElementById('DeleteModal') // deleteapi

      if (form.ariaHidden === 'true') {
        myModal.show(modalToggle)
        console.log("form -----> ")
        form.ariaHidden = 'false';
      } else {
        form.ariaHidden = 'true';
      }
    }
    function ModalClose() {
      var myModal = new bootstrap.Modal(document.getElementById('DeleteModal'), {
        keyboard: false
      })
      myModal.hide();
    }
  </script>

</head>

<body onload="startCountdown()" style="background-color: rgb(76, 198, 222)">
  <div class="container">
    <h2>
      <%= title %>
    </h2>
    <!-- <a href="/add" class="btn btn-sm btn-primary">Add User</a><br/><br/> -->
    <table class="table table-dark table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Age</th>
          <th>City</th>
          <th>Phone No.</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(function(user){ %>
          <tr>
            <td>
              <%= user.first_name %>
            </td>
            <td>
              <%= user.last_name %>
            </td>
            <td>
              <%= user.age %>
            </td>
            <td>
              <%= user.city %>
            </td>
            <td>
              <%= user.phone_no %>
            </td>
            <td>
              <%= user.email %>
            </td>
            <td>
              <%= user.id %>
            </td>
            <td>
              <a href="/user_edit/<%= user.id %>" class="btn btn-sm btn-primary">Edit</a>
              <a href="/user_delete.ejs/<%= user.id %>" class="btn btn-sm btn-danger">Delete</a>
              <!-- <a href="delete/<%= user.id %>" class="btn btn-sm btn-danger"  data-bs-toggle="modal" data-bs-target="#exampleModal">Delete</a> -->
              <!-- <button type="button" value="/delete/<%= user.id %>" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#DeleteModal" onclick="ModalClick()" >delete</button> -->
              <!-- <button type="submit"  class="btn btn-sm btn-danger" data-target="#modal-edit-user-<%= user._id %>"> Delete </button> -->
              </form>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>
    <!-- Modal -->
    <% users.forEach(function(item){ %>
      <div class="modal fade" id="DeleteModal" tabindex="-1" aria-labelledby="DeleteModal" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="DeleteModal">Modal title</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" id="Closebtn" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form class="form-control" action="/delete/<%= item.id %>" method="get">
                <p>Are you sure you want to delete ? </p>
                <p>***********</p>
                <button type="submit" class="btn btn-outline-danger" name="deleteButton"
                  value="/delete<%= item.id %>">yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
              </form>
            </div>
            <div class="modal-footer">
              <p>Press "yes" to Confirm Delete </p>
            </div>
          </div>
        </div>
      </div>
      <% }); %>

        <!-- <button class="btn btn-primary"><a(href="/logout")>logout</a></button> -->
        <a href="/logout">logout</a>
</body>
<script src="/js/autoLogout.js"></script>

</html>