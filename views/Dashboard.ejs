  <script> function ModalClick() {
      console.log("buttton call")
      const form = document.getElementById('DeleteModal');
      var myModal = new bootstrap.Modal(document.getElementById('DeleteModal'), {
        keyboard: false
      })
      var modalToggle = document.getElementById('DeleteModal') // deleteapi
      if (form.ariaHidden === 'true') {
        myModal.show(modalToggle)
        form.ariaHidden = 'false';
      } else {
        form.ariaHidden = 'true';
      }
    }
    function ModalClose() {
      var myModal = new bootstrap.Modal(document.getElementById('DeleteModal'), {
        keyboard: false
      })
      myModal.hide();
    }
  </script>

